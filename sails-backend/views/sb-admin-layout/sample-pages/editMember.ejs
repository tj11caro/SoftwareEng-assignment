<h1 class="display-4">Edit Donatation</h1>
<% var flash= _.clone(req.flash('err')); %>
<% if(flash.length>0) { %>
    <ul class="alter alter-success">
        <% Object.keys(flash).forEach(function(err) {%>
            <li>
                <%- JSON.stringify(flash[err]) %>
            </li>

            <% }); %>
    </ul>
    <% } %>

<form action="/Member/update/<%= edits.id %>" method="post">
    <div class="form-group">
        <label for="title">First Name</label>
        <input type="text" name="fname" class="form-control" value="<%= edits.fname %>">
    </div>
    <div class="form-group">
        <label for="lname">Last Name</label>
        <input type="text" name="lname" class="form-control" value="<%= edits.lname %>">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" name="email" class="form-control" value="<%= edits.email %>">
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="text" name="password" class="form-control" value="<%= edits.password %>">
    </div>
    <input type="submit" value="Submit" class="btn btn-primary">
</form>